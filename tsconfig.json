{
	"compilerOptions": {
	  "target": "ES2020",  // Specifies ECMAScript version
	  "module": "NodeNext", // Specifies module system (ESM)
	  "moduleResolution": "NodeNext", // How modules are resolved
	  "outDir": "./backend/dist", // Output directory for compiled JS files
	  "rootDir": "./backend", // Root directory for your source files
	  "strict": true, // Enable strict type-checking options
	  "esModuleInterop": true, // Allow default imports with CommonJS modules
	  "skipLibCheck": true // Skip type checking of declaration files
	},
	"ts-node": {
	  "esm": true // Enable ESM support with ts-node
	},
	"include": ["backend/src/**/*"], // Include files in backend/src
	"exclude": ["node_modules", "**/*.spec.ts", "frontend"] // Exclude node_modules, spec files, and frontend
  }
  