{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Include DOM libraries for browser-based apps
    "module": "ESNext",
    "skipLibCheck": true,

    /* Module Resolution */
    "moduleResolution": "Node", // Use Node module resolution for better compatibility
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx", // Ensure modern JSX runtime for React 17+

    /* TypeScript Linting Options */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Compatibility Settings */
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "allowSyntheticDefaultImports": true, // Allow default imports even if they're missing
    "forceConsistentCasingInFileNames": true // Prevent case-sensitive import errors
  },
  "include": ["src"], // Include the src directory
  "exclude": ["node_modules", "dist"] // Exclude build and dependency artifacts
}
